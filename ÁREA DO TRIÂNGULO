#-*- coding: utf-8 -*utf-
import os
import time
import sys

area = 0
base = 0
altura = 0

print('*** Vamos calcular area do triangulo! ***\n')
altura = int (input('Digite a altura do triangulo:\n'))
base = int(input('Digite a base do triangulo:\n'))
area = (base*altura)/2
print('A area do triangulo é:', area)

sys.exit
